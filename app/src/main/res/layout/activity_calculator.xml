<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <Button
          android:id="@+id/theme_1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toStartOf="@id/theme_2"
          android:text="@string/theme_1"
          android:textSize="@dimen/size_text_3"
          android:layout_margin="8dp"/>
      <Button
          android:id="@+id/theme_2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toEndOf="@id/theme_1"
          app:layout_constraintEnd_toEndOf="parent"
          android:text="@string/theme_2"
          android:textSize="@dimen/size_text_3"
          android:layout_margin="8dp"/>

      <include layout="@layout/keyboard" />

</androidx.constraintlayout.widget.ConstraintLayout>